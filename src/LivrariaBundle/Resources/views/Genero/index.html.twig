{% extends 'base.html.twig' %}

{% block body %}
    <h1>
        Gêneros Cadastrados
        <a href="{{ path('genero_new') }}"><button class="pull-right btn btn-primary"><span class="glyphicon glyphicon-plus"></span></button></a>
    </h1>
    <table class="table table-striped table-condensed table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        {% for genero in generos %}
            <tr>
                <td><a href="{{ path('genero_show', { 'id': genero.id }) }}">{{ genero.id }}</a></td>
                <td>{{ genero.nome }}</td>
                <td>
                    <a href="{{ path('genero_show', { 'id': genero.id }) }}"><button class="btn btn-default"><span class="glyphicon glyphicon-eye-open"></span></button></a>
                    <a href="{{ path('genero_edit', { 'id': genero.id }) }}"><button class="btn btn-warning"><span class="glyphicon glyphicon-pencil"></span></button></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
